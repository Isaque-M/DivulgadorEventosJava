
import Classes.Comentarios;
import Classes.Diretor;
import Classes.Local;
import Classes.Peca;
import Classes.Perfil;
import Classes.Usuario;
import Enum.Avaliacao;
import Interfaces.InterfaceEventos;

public class Main {
	public static void main(String[] args) {
        
        Local local = new Local("Av. Brasil", "Centro", "20000-000", "Rio de Janeiro");
        local.verificaCep(); 

       
        Perfil perfil = new Perfil("Apaixonado por cultura");
        Usuario usuario = new Usuario("Isaque", "isaque@email.com", "123", perfil);

     
        Diretor diretor = new Diretor("João das Peças");
        Peca peca = new Peca(1, 4, "Romeu e Julieta", local, diretor);

    
        usuario.Fazercheckin(peca);

        
        usuario.avaliarEvento(1, Avaliacao.Excelente);

       
        Comentarios comentario = new Comentarios(1, "Espetacular!", "Atuação maravilhosa!", usuario);
        usuario.fazerComentarios(comentario);

        
        InterfaceEventos eventoInterface = peca;
        eventoInterface.exibirDados();
    }
}


